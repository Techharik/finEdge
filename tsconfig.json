{
  "compilerOptions": {
    /* ---- CORE ---- */
    "target": "ES2022", // Modern JS for Node 18+
    "module": "ESNext", // ESM output
    "moduleResolution": "bundler", // BEST for ESM + Node 18+
    "lib": [
      "ES2022"
    ],
    "rootDir": "src",
    "outDir": "dist",
    /* ---- STRICT ---- */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    /* ---- Node + Import Helpers ---- */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": false,
    /* ---- ESM BEHAVIOR ---- */
    "isolatedModules": true, // Required for ts-node-esm & ESM build
    /* ---- DEV ONLY ---- */
    "sourceMap": true,
    /* ---- OPTIONAL ALIASES ---- */
    // "baseUrl": ".",
    // "paths": { "@/*": ["src/*"] },
    /* ---- SPEED ---- */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}